unit	Engine3D_NPCTools;		interfaceuses	types,	quickdraw;procedure AdjustRepeated (	Id :	integer);implementationuses	Dream3Display_Tipi,	Dream3Display_Tools;	procedure AdjustRepeated (	Id :	integer);label	100;	var	I :	integer;	begin	for I := 1 to NPCN do		if NPCList^ [I]^.Id = Id then			goto 100;	exit (AdjustRepeated);100:	NPCList^ [I]^.TalkOccurred := false;end;end.